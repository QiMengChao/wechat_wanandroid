.contianer{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 15px;
  margin-right: 15px;
  margin-top: 15px;
}
.search_bg{
  border: 1px solid darkgray;
  width: 80%;
  height: 30px;
  display: flex;
  flex-direction: row;
  border-radius: 5px;
  padding-left: 5px;
  align-items: center;
  margin-right: 5px;
}
.icon_search{
  vertical-align: middle;
}
.input_search{
  font-size: 14px;
  margin-left: 5px;
  flex: auto;
}
.text_search{
  flex: auto;
  background-color: transparent;
  margin-right: 5px;
}
.clear_class{
  align-content: right;
  margin-right: 5px;
}
.text_content{
  margin: 20px;
}
.tag_continaer{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.search_tag{
  padding: 8rpx;
  margin: 10rpx;
  border: 1px solid#d0d0d0;
  font-size: 14px;
  border-radius: 30rpx;
}