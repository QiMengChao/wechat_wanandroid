.login_contianer{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.login_bg{
  border: 1px solid black;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-top: 60rpx;
  padding: 10rpx;
}
.text_input{
  font-size: 14px;
  border: 1px solid darkgray;
  width: 90%;
  height: 40px;
  margin-top: 10px;
  border-radius: 10px;
  padding-left: 5px;
}
.text_register{
  color: blueviolet;
  font-size: 16px;
  text-align: right;
  text-decoration: underline;
  align-self: center;
  margin-top: 10px;
  width: 80%;
}
.btn_login{
  background-color: #1296db;
  width: 66%;
  color: white;
  font-size: 16px;
  margin-top: 15px;
}
