.search_container{
  display: flex;
  flex-direction: row;
  background: white;
  padding: 30rpx;
}
.search_background{
  font-size: 0;
  flex: auto;
  background: #cccccc;
  border-radius: 4px;
  padding: 6px;
}
.search_icon{
  vertical-align: middle;
}
.search_text{
  margin-left: 5rpx;
  font-size: 14px;
  color: #999999;
  vertical-align: middle;
}
.home-banner{
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: white
}
.home-img{
  width: 100%;
  height: 300rpx;
}
.home-item-artilce{
  border-radius: 5px;
  background-color: rgba(128, 128, 128, 0.253);
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 10rpx;
}
.home-item-authorbg{
  width: 40rpx;
  height: 40rpx;
  background-color: white;
  padding:5rpx;
  border-radius: 50%;
  font-size: 30rpx;
  text-align: center;
  color:#fff;
}
.home-article-item1{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 30rpx;
  padding-top: 20rpx;
}
.home-artilce-item2{
  padding-top: 20rpx;
  display: flex;
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding-bottom: 20rpx;
  align-items: center;
}
.home-item-author{
  flex: 1;
  margin-left: 20rpx;
  font-size: 14px;
  color: #1296db;
}
.home-item-date{
  margin-right: 20rpx;
  font-size: 14px;
  color:gray;
}
.home-item-title{
  padding-top: 20rpx;
